<div class="container padd20">
  <h3 class="text-center">Add an ingredient</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :ingredient, collection: Ingredient.order(:name), prompt: "Pick an ingredient!" %>
      <%= f.input :description %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
      <div class="pad20">
        <%= link_to "Go back", cocktails_path, class: "btn btn-warning btn-sm" %>
      </div>
    </div>
  </div>
</div>

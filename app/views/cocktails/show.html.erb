  <h3 class="text-left">Add an ingredient</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient, prompt: "Pick one from the list" %>
      <%= f.input :description %>
        <div class="submit-goback">
          <%= f.submit "Submit", class: "btn pad20" %>
          <%= link_to "Go back", cocktails_path, class: "btn pad20 back" %>
        </div>
      <% end %>
    </div>

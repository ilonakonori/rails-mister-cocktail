<div class="container pad20">
  <h1 class="text-center"> <%= @cocktail.name %> </h1>
  <div class="row">
    <div class="col-xs-12 col-md-6">
    </div>
  </div>
  <div class="container pad20">
  <h3 class="text-center">Add an ingredient</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient, prompt: "Pick one from the list" %>
      <%= f.input :description %>
      <%= f.submit "Submit", class: "btn" %>
      <% end %>
      <div class="pad20">
        <%= link_to "Go back", cocktails_path, class: "btn" %>
      </div>
    </div>
  </div>
  </div>
</div>